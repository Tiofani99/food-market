<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodMarket" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FoodMarket.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextView" />

    <style name="TextView.PoppinsNormal32sp020202">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextView.PoppinsNormal16sp020202">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.PoppinsNormal22sp020202">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextView.PoppinsNormal20sp020202">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.PoppinsNormal14sp8d92a3">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">#8d92A3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText"/>

    <style name="EditText.PoppinsNormal14sp8D92A3">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">#8D92A3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button"/>

    <style name="Button.Primary">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">#020202</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@drawable/shape_rectangle_8_ffc700</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Secondary">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@drawable/shape_rectangle_8_8d92a3</item>
        <item name="backgroundTint">#8D92A3</item>
        <item name="textAllCaps">false</item>
    </style>




</resources>